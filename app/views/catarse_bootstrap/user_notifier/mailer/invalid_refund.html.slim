- contribution = @notification.contribution
- bank_account = contribution.user.bank_account
- project = contribution.project

= raw t('.ol_comunidade')
br/
br/
= raw t('.o_reembolso_do_apoio', link_to: (link_to(project.name, project_by_slug_url(permalink: project.permalink))))
br/
br/
- if bank_account
  = raw t('.banco_bank_account', bank_account: (bank_account.bank.to_s))
  br
  = raw t('.ag_ncia_bank_account', bank_account: (bank_account.try(:agency)), bank_account1: (bank_account.try(:agency_digit)))
  br
  = raw t('.conta_bank_account_bank', bank_account: (bank_account.try(:account)), bank_account1: (bank_account.try(:account_digit)))
  br
  = raw t('.nome_do_titular_bank', bank_account: (bank_account.try(:owner_name)))
  br
  = raw t('.cpf_bank_account', bank_account: (bank_account.try(:owner_document)))
  br/
  br/
= raw t('.chave_de_identifica_o', contribution: (contribution.payment_id))
br/
br/
= raw t('.favor_entrar_em_contato', mail_to: (mail_to contribution.user.email))
br/
br/
= raw t('.beijos')
br/
= raw t('.catarse')