- contribution = @notification.contribution
- company_name = ENV['COMPANY_NAME']
- contact_email = ENV['EMAIL_CONTACT']

= t('.ol_strong_contribution_strong', contribution: (contribution.user.display_name))
br
br
= t('.n_o_recebemos_a', link_to: (link_to contribution.project.name, project_by_slug_url(permalink: contribution.project.permalink, ref: 'notificacao_cancelado')))
br
br
= t('.para_se_tornar_realidade', l: (l(contribution.project.expires_at)))
= t('.para_realizar_uma_link', link_to: (link_to t('.nova_contribui_o'), project_by_slug_url(permalink: contribution.project.permalink, ref: 'notificacao_cancelado')))
= t('.junte_se_a_mais', contribution: (contribution.project.total_contributions), link_to1: (link_to contribution.project.name, project_by_slug_url(permalink: contribution.project.permalink, ref: 'notificacao_cancelado')))
br
br
= t('.se_ficou_com_alguma', mail_to: (mail_to contact_email))
br
br
= t('.um_abra_o')
br
= t('.company_name', company_name: (company_name))